{
  // https://github.com/tsconfig/bases/blob/main/bases/node18.json
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "declaration": true,
    "incremental": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  }
}
